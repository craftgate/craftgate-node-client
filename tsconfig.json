{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["ES2015", "DOM"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "types": ["@types/node"]
  },
  "include": ["src/**/*"]
}
